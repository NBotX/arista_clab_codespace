{
  "name": "Arista Clab with cEoS Auto Download",
  "image": "mcr.microsoft.com/devcontainers/python:3.12-bullseye",

  "containerEnv": {
    "ARISTA_TOKEN": "${localEnv:ARISTA_TOKEN}"
  },

  "secrets": {
    "ARISTA_TOKEN": {
      "description": "Your Arista token to auto-download EOS images. Leave blank to skip."
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  "postCreateCommand": "bash .devcontainer/arista-clab-ceos-auto-download/post-create.sh",

  "customizations": {
    "vscode": {
      "settings": {
        "containerlab.showWelcomePage": false,
        "workbench.startupEditor": "readme",
        "workbench.editorAssociations": {
        "*.md": "vscode.markdown.preview.editor"
      },
      "extensions.ignoreRecommendations": true,
      "extensions.showRecommendationsOnlyOnDemand": true
    },
      "extensions": [
        "ms-python.python",
        "redhat.ansible",
        "ms-azuretools.vscode-docker",
        "srl-labs.vscode-containerlab"
      ]
    }
  },

  "remoteUser": "vscode",

  "hostRequirements": {
    "cpus": 4,
    "memory": "16gb",
    "storage": "32gb"
  }
}
